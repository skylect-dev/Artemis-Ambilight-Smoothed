<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:screens="clr-namespace:Artemis.Plugins.LayerBrushes.AmbilightSmoothed.Screens"
             xmlns:converters="clr-namespace:Artemis.Plugins.LayerBrushes.AmbilightSmoothed.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Artemis.Plugins.LayerBrushes.AmbilightSmoothed.Screens.CaptureScreenView"
             x:DataType="screens:CaptureScreenViewModel">
    <UserControl.Styles>
        <Style Selector="Border.screen">
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Transitions">
                <Setter.Value>
                    <Transitions>
                        <BrushTransition Property="BorderBrush" Duration="0:0:0.2" Easing="CubicEaseOut" />
                    </Transitions>
                </Setter.Value>
            </Setter>
        </Style>
        <Style Selector="Border.screen-selected">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
        </Style>
    </UserControl.Styles>
    <Border Classes="card screen"
            Classes.screen-selected="{CompiledBinding IsSelected}"
            Padding="0"
            Margin="5 0">
        <Grid ColumnDefinitions="*,Auto">
            <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="25">
                <TextBlock Text="{CompiledBinding DisplayName}" Classes="h4" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{CompiledBinding Display.Width}" />
                    <TextBlock Text="x" />
                    <TextBlock Text="{CompiledBinding Display.Height}" />
                </StackPanel>
                <TextBlock Text="{CompiledBinding Display.GraphicsCard.Name}" Classes="subtitle" />
            </StackPanel>
            <Border Grid.Row="0" Grid.Column="1" ClipToBounds="True" CornerRadius="0 8 8 0">
                <Grid>
                    <Image Name="DisplayPreviewImage"
                           Height="130"
                           Source="{CompiledBinding DisplayPreview.Preview}"
                           RenderOptions.BitmapInterpolationMode="LowQuality"
                           Stretch="Uniform" />
                    <!-- HDR/SDR Badge -->
                    <Border HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="8"
                            CornerRadius="3"
                            Padding="6,2">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding DisplayPreview.IsHdr, Converter={x:Static converters:HdrColorConverter.Instance}}" />
                        </Border.Background>
                        <TextBlock Text="{Binding DisplayPreview.IsHdr, Converter={x:Static converters:HdrTextConverter.Instance}}"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="10" />
                    </Border>
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>